public class s2 {
    public static void main(String[] args) {

        String s ="THIS IS A WORD";
        String s1[] = s.split(" ");
        String longestword ="";
        int longestcount = 0;
         for (String s2 : s1){
             int l = s2.length();
             if (l >= longestcount){
                 longestword =  s2;
                 longestcount = s2.length();
                 System.out.println(longestword);
                 System.out.println(longestcount);

             }
         }





    }
}
